= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :section_id
    = f.text_field :section_id
  .field
    = f.label :sequence_id
    = f.text_field :sequence_id
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
